<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="View_57_ExtraInfo">
        <description>List View (id=57)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(57)</visible>
            <visible>!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogAlbumInfo.xml)</visible>
			<animation type="Conditional" reversible="true" condition="!System.IdleTime(20) + System.IdleTime(3) + Skin.HasSetting(furniture.overlayinfo) + ![ControlGroup(9000).HasFocus() | Window.IsVisible(DialogContextMenu.xml)]">
				<effect type="fade" start="100" end="00" time="200" tween="quadratic" easing="out" />
				<effect type="zoom" end="1000,7" time="200" center="auto" tween="quadratic" easing="out" />
			</animation>
            <control type="group">
				<!--
                <control type="image">
					<height>740</height>
				    <top>TopPad</top>
					<left>10</left>
				    <width>1325</width>
                    <fadetime>200</fadetime>
                    <aspectratio align="right" aligny="center" scalediffuse="false">scale</aspectratio>
                   <texture background="true" diffuse="diffuse/extraposter-ref.png">$VAR[LandscapeImage]</texture>
                </control>
				-->
                <control type="image">
					<height>740</height>
				    <top>TopPad</top>
					<left>10</left>
				    <width>960</width>
                    <fadetime>100</fadetime>
                    <aspectratio align="left" aligny="center" scalediffuse="false">scale</aspectratio>
                   <texture background="true">$VAR[LandscapeImage]</texture>
                </control>
                <control type="image">
					<height>740</height>
				    <top>TopPad</top>
					<left>970</left>
				    <width>365</width>
                    <fadetime>1000</fadetime>
                    <aspectratio align="right" aligny="center" scalediffuse="false">scale</aspectratio>
                   <texture background="true" diffuse="diffuse/extraposter-ref-blur.png">$INFO[Window(home).Property(VideoInfoExtra.ImageFilter)]</texture>
                </control>
                <control type="list" id="57">
                    <visible>Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(actors) | Container.Content(sets) | Container.Content(seasons)</visible>
                    <top>TopPad</top>
                    <height>720</height>
                    <right>-220</right>
                    <width>1160</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>60</onright>
                    <onup>57</onup>
                    <ondown>57</ondown>
                    <focusposition>3</focusposition>
                    <movement>3</movement>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31147">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="930" height="66">
                        <include>50itemlayout</include>
                    </itemlayout>
                    <focusedlayout width="930" height="66">
						<control type="button">
							<texturefocus>-</texturefocus>
							<texturenofocus>-</texturenofocus>
							<onfocus condition="Container.Content(movies)">ClearProperty(TVShowID,home)</onfocus>
							<onfocus condition="Container.Content(tvshows)">SetProperty(TVShowID,$INFO[ListItem.DBID],home)</onfocus>
							<onfocus condition="!Container.Scrolling">RunScript(script.toolbox,info=blur,id='"$VAR[LandscapeImage]"',radius=$VAR[VideoInfoBlurLevel],prefix=VideoInfoExtra)</onfocus>
						</control>
                        <control type="group">
                            <visible>Control.HasFocus(57) + !Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50focuslayout</include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(57) | Window.IsVisible(DialogVideoInfo.xml)</visible>
                            <include>50itemlayout</include>
                        </control>
                    </focusedlayout>
                </control>
                <include>Furniture_Scrollbar</include>
            </control>
            <include name="Fanart_Info">
                <param name="posx" value="10" />
            </include>
        </control>
    </include>
    <include name="Fanart_Info">
        <control type="group">
            <left>$PARAM[posx]</left>
            <width>960</width>
            <top>TopPad</top>
            <height>1200</height>
            <control type="group">
                <height>740</height>
                <visible>[!Skin.HasSetting(57list.low) + Control.IsVisible(57)] | !Control.IsVisible(57)</visible>
                <visible>[!Skin.HasSetting(56media.low) + Control.IsVisible(56)] | !Control.IsVisible(56)</visible>
            </control>
 				<control type="image">
					<description>Title overlay</description>
					<left>0</left>
					<posy>660</posy>
					<width>960</width>
					<height>80</height>
					<texture border="15" colordiffuse="af000000">common/white.png</texture>
				</control>
           <control type="group">
					<posy>570</posy>
               <height>80</height>
                <control type="label">
 					<left>5</left>
                    <top>58</top>
                    <aligny>center</aligny>
                    <height>100</height>
 					<width>125%</width>
                   <font>MediumBold</font>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelDirector]</label>
                </control>
                <control type="label">
  					<left>5</left>
                   <top>110</top>
                    <height>64</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>MediumBold</font>
					<width>950</width>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelGenre]</label>
                </control>
				<!--
                <control type="textbox">
                    <top>116</top>
                    <bottom>19</bottom>
                    <align>justify</align>
                    <font>Tiny</font>
                    <textcolor>Dark1</textcolor>
                    <selectedcolor>Dark1</selectedcolor>
                    <label>$VAR[LabelPlotBox]</label>
                </control>
				-->
            </control>
        </control>
    </include>

</includes>
